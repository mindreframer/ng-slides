%html(ng-app)
  %head
    %meta(charset="UTF-8")
    %script(src="http://code.angularjs.org/angular-1.0.1.min.js")
    %script(src="/example_four.js")
    %link(rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap.css")
  %body(ng-controller="MainController")
    %article(ng-repeat="post in posts")
      %h2 {{post.title}}
      %p.lead {{post.content}}
      .comments(ng-controller="CommentsController")
        %h4 Comments:
        .facepalm(ng-repeat="comment in comments")
          %h6
            {{comment.the_douchebags_name}}
            %a.upboat(ng-click="upboat(comment)") ⬆
            %a.report(ng-click="report(comment)") ✖
          %blockquote {{comment.what_the_twit_had_to_say}}
        %h6(ng-hide="comments") No comments yet.
